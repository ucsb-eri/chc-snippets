    <div class="center">
      <div>
        <div style="float: left;">
          <div style="width: 590px;">
            <h1>CHIRPS Snippet Configurator</h1>
            <p>
            </p>
      <div class="clear-float"></div>
      <hr/>

    <p> Select Periodicity:
        <select id="periodicity">
          <option value="1-month">Monthly</option>
          <option value="1-pentad">Pentadal</option>
          <option value="1-dekad">Dekadal</option>
          <option value="2-month">2-Monthly</option>
          <option value="3-month">3-Monthly</option>
        </select>
    </p>

    <p> Select Statistic:
        <select id="statistic">
            <option value="data">Data</option>
            <option value="Anomaly">Anomaly</option>
            <option value="Z-score">Z-score</option>
        </select>
    </p>

    <form>
      <label  for="width">Width:</label><br>
      <input type="text" id="width" name="width" value="500"><br>
    </form>
    <br>

    <form>
      <label for="height">Height:</label><br>
      <input type="text" id="height" name="height" value="500">
    </form>
    <br>

    <form>
      <label for="zoom">zoom:</label><br>
      <input type="text" id="zoom" name="zoom" value="6.0">
    </form>
    <br>

    <form>
      <label for="longitude">longitude:</label><br>
      <input type="text" id="longitude" name="longitude" value="3.8">
    </form>
    <br>

    <form>
      <label for="latitude">latitude:</label><br>
      <input type="text" id="latitude" name="latitude" value="42.3">
    </form>

    <br>
    <button onclick="getOptions()"> Create Configuration </button>
    <br>

<p id="demo">script</p>

<script>
  function getOptions() {
    element = document.querySelector('#periodicity');
    periodicity = element.value;

    element = document.querySelector('#statistic');
    statistic = element.value;
	
    element = document.querySelector('#width');
    width = element.value;
	
    element = document.querySelector('#height');
    height = element.value;
	
    element = document.querySelector('#zoom');
    zoom = element.value;
	
    element = document.querySelector('#latitude');
    latitude = element.value;
	
    element = document.querySelector('#longitude');
    longitude = element.value;
	
    let txt = "&lt!DOCTYPE html&gt" + "<br>";
    txt += "&lthtml&gt" + "<br>";
    txt += "&nbsp;&nbsp;&lthead&gt" + "<br>";
    txt += '&nbsp;&nbsp;&nbsp;&nbsp;&lttitle&gtSnippets Page&lt/title&gt"' + "<br>";
    txt += "&nbsp;&nbsp;&lt/head&gt" + "<br>";
    txt += "&ltbody&gt" + "<br>";
    txt += '&nbsp;&nbsp;&lt/div id="snippet-m08f05L58&gt&lt/div&gt"' + "<br>";
    txt += '&nbsp;&nbsp;&ltscript src="https://snippets.chc.ucsb.edu/ewxmapG5_ken_wards.js"&gt&lt/script&gt' + "<br>";
    txt += "<br>";
    txt += '&nbsp;&nbsp;&ltscript&gt type="text/javascript"' + "<br>";
    txt += "&nbsp;&nbsp;new EwxMapG5({" + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;ewxUrl: src='https://ewx3.chc.ucsb.edu/ewx', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;id: 'snippet-m08f05L58', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;dataset: 'CHIRPS', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;subDataset: 'chirps', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;region: 'global', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;periodicity: '" + periodicity + "', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;period: 'latest', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;showDekadControl: 'true', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;showYearControl: 'true', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;units: 'mm', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;statistic: '" + statistic + "', " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;width: " + width + ", " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;height: " + height + ", " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;zoom: " + zoom + ", " + "<br>";
    txt += "&nbsp;&nbsp;&nbsp;&nbsp;center: [" + latitude + ", " + longitude + "]," + "<br>";
    txt += "&nbsp;&nbsp;});" + "<br>";
    txt += "&nbsp;&nbsp;&lt/script&gt" + "<br>";
    txt += "<br>";
    txt += "&lt/body&gt" + "<br>";
    txt += "&lt/html&gt" + "<br>";
    txt += "<br>";
    txt += "<br>";
    txt += "<br>";
    txt += "<br>";


  document.getElementById("demo").innerHTML = txt;




  }
</script>


  <script type="text/javascript">
    new EwxMapG5({
      ewxUrl: 'https://ewx3.chc.ucsb.edu/ewx',
      id: 'ewx-map-h4vbt36xss',
      dataset: 'CHIRPS-GEFS',
      subDataset: 'chirps_gefs',
      region: 'global',
