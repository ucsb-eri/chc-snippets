    p {
      text-align: center;
      font-size: 1.1em;
    }

    a {
      text-decoration: none;
      color: #059AB5;
    }

    a:hover {
      text-decoration: underline;
    }

    /* --- Header --- */
    .header {
      background-color: #059AB5;
      color: white;
      padding: 10px 0;
    }

    .header table {
      width: 100%;
      border-collapse: collapse;
      background-color: #059AB5;
    }

    .header a {
      color: white;
      font-weight: 500;
    }

    /* --- Map container --- */
    .map-container {
      width: 600px;
      margin: 30px auto; /* centers the map */
    }

    footer {
      background-color: #059AB5;
      color: white;
      text-align: center;
      padding: 15px;
      font-size: 14px;
      margin-top: 40px;
    }
  </style>
</head>

<body>

