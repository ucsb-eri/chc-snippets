  <!-- Page Title and Description -->
  <h1>Kakuma Refugee Camp Heat Tracker</h1>
  <p>This map shows the average maximum air temperature for the past five days, providing an overview of recent temperature conditions.</p>

  <!-- Centered Map -->
  <div class="map-container">
    <div id="snippet-m08f05L58"></div>
  </div>

  <!-- Map Script -->
  <script src="https://snippets.chc.ucsb.edu/ewxmapG5.js"></script>
  <script type="text/javascript">
    new EwxMapG5({
      ewxUrl: 'https://ewx3.chc.ucsb.edu/ewx',
      id: 'snippet-m08f05L58',
      dataset: 'CHIRTSERA5',
      subDataset: 'chirts-era5tmax',
      region: 'global',
      periodicity: '1-month',
      period: 'latest',
      forecastPeriod: 'none',
      showDekadControl: true,
      showYearControl: true,
      units: 'C',
      statistic: 'anom',
      width: 600,
      height: 350,
      zoom: 8,
      center: [3.7, 35.4],
    });
  </script>

  <!-- Footer -->
  <footer>
    &copy; 2025 Climate Hazards Center | University of California, Santa Barbara
  </footer>

