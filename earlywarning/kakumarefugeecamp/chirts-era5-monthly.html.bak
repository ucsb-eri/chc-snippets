<h1>Kakuma Refugee Camp Heat Tracker</h1>

<p>
  These maps show recent maximum air temperature conditions at Kakuma Refugee Camp
  using CHIRTS-ERA5 pentad data, including absolute values, anomalies, and standardized
  Z-scores.
</p>

<!-- Map Script -->
<script type="text/javascript" src="./snippet.js"></script>

  <!-- ===== ALL THREE MAPS IN ONE ROW ===== -->
  <div class="map-row">
    
    <!-- DATA MAP -->
    <div class="map-panel">
      <div id="map-data"></div>
      <img
        width="500"
        src="chirtsera5-zscore-legend-resized.png"
        alt="CHIRTS-ERA5 Tmax Legend"
      />
    </div>

    <!-- ANOMALY MAP -->
    <div class="map-panel">
      <div id="map-anom"></div>
      <img
        width="500"
        src="chirtsera5-anomaly-legend-resized.png"
        alt="CHIRTS-ERA5 Tmax Anomaly Legend"
      />
    </div>

    <!-- Z-SCORE MAP -->
    <div class="map-panel">
      <div id="map-zscore"></div>
      <img
        width="500"
        src="chirtsera5-zscore-legend-resized.png"
        alt="CHIRTS-ERA5 Tmax Z-Score Legend"
      />
    </div>

  </div>

  <!-- JavaScript to initialize maps -->
  <script type="text/javascript">
    // Data Map
    new Snippet({
      ewxUrl: 'https://ewx3.chc.ucsb.edu/ewx',
      id: 'map-data',
      dataset: 'CHIRTSERA5',
      subDataset: 'chirts-era5tmax',
      showGaul20080: true,
      showGaul20081: true,
      showGaul20082: false,
      showKenyaWards: true,
      region: 'global',
      periodicity: '1-month',
      period: 'latest',
      showDekadControl: true,
      showYearControl: true,
      units: 'mm',
      statistic: 'data',
      width: 500,
      height: 375,
      zoom: 8,
      center: [3.7, 35.4],
    });

    // Anomaly Map
    new Snippet({
      ewxUrl: 'https://ewx3.chc.ucsb.edu/ewx',
      id: 'map-anom',
      dataset: 'CHIRTSERA5',
      subDataset: 'chirts-era5tmax',
      showGaul20080: true,
      showGaul20081: true,
      showGaul20082: false,
      showKenyaWards: true,
      region: 'global',
      periodicity: '1-month',
      period: 'latest',
      showDekadControl: true,
      showYearControl: true,
      units: 'mm',
      statistic: 'anom',
      width: 500,
      height: 375,
      zoom: 8,
      center: [3.7, 35.4],
    });

    // Z-Score Map
    new Snippet({
      ewxUrl: 'https://ewx3.chc.ucsb.edu/ewx',
      id: 'map-zscore',
      dataset: 'CHIRTSERA5',
      subDataset: 'chirts-era5tmax',
      showGaul20080: true,
      showGaul20081: true,
      showGaul20082: false,
      showKenyaWards: true,
      region: 'global',
      periodicity: '1-month',
      period: 'latest',
      showDekadControl: true,
      showYearControl: true,
      units: 'mm',
      statistic: 'zscore',
      width: 500,
      height: 375,
      zoom: 8,
      center: [3.7, 35.4],
    });
  </script>

